<!DOCTYPE html>
<html>

<head>
    <%- include ("./partials/head") %>
        <title>Digital Travel</title>
</head>

<body>
    <header>
        <%- include ("./partials/header") %>
    </header>
    <main>
        <div>
            <section>
                <form action="/" method="POST" class="form">
                    <input type="text" name="destino" required placeholder="Â¿A donde quiere ir?">
                    <br>
                    <label for="date">Fecha de entrada</label>
                    <input type="date" name="date" required>
                    <br>
                    <label for="date">Fecha de salida</label>
                    <input type="date" name="date" required>
                    <button type="submit">Buscar</button>
                </form>
            </section>

            <div class="container">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <% for (let i=0; i < discountProducts.length; i++ ) { %>
                            <% if (i==0) { %>
                                <li data-target="#myCarousel" class="active"></li>
                                <% } else { %>
                                    <li data-target="#myCarousel"></li>
                                    <% } %>
                                        <% } %>
                    </ol>

                    <div class="carousel-inner">
                        <% for (let i=0; i < discountProducts.length; i++ ) { %>
                            <% if (i==0) { %>

                                <div class="item active">
                                    <a href="/products/productdetail/<%= discountProducts[i].id %>"><img
                                            src="/images/products/<%= discountProducts[i].image %>"
                                            alt="<%= discountProducts[i].name %>" style="width:100%;"></a>
                                    <div class="carousel-caption">
                                        <h3>
                                            <%= discountProducts[i].name %>
                                        </h3>
                                    </div>
                                </div>
                                <% } else { %>
                                    <div class="item">
                                        <a href="/products/productdetail/<%= discountProducts[i].id %>"></a><img
                                            src="/images/products/<%= discountProducts[i].image %>"
                                            alt="<%= discountProducts[i].name %>" style="width:100%;"></a>
                                        <div class="carousel-caption">
                                            <h3>
                                                <%= discountProducts[i].name %>
                                            </h3>
                                        </div>
                                    </div>
                                    <% } %>
                                        <% } %>

                    </div>

                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

        </div>
    </main>
    <footer>
        <%- include ("./partials/footer") %>
    </footer>

</body>

</html>